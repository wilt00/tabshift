{
    "manifest_version": 2,
    "name": "TabShift",
    "version": "0.1",

    "description": "Easily drag and drop tabs between windows in bulk",
    "homepage_url": "https://willtoher.com",
    "icons": {
        "48": "icons/beasts-48.png"
    },

    "permissions": [
        "tabs",
        "clipboardWrite",
        "contextualIdentities",
        "sessions"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icons/beasts-32.png",
        "default_title": "TabShift"
    }
}